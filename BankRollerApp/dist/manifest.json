{
	"name": "__MSG_appName__",
	"version": "0.0.2",
	"manifest_version": 2,
	"description": "__MSG_appDescription__",
	"icons": {
		"16": "assets/icons/icon-16.png",
		"128": "assets/icons/icon-128.png"
	},
	"default_locale": "en",
	"background": {
		"scripts": [
			"background.bundle.js"
		]
	},
	"permissions": [
		"tabs",
		"http://*/*",
		"https://*/*",
		"background",
		"clipboardRead",
		"clipboardWrite",
		"idle",
		"notifications",
		"storage",
		"webRequest",
		"*://*.google.com/"
	],
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"client.bundle.js"
			],
			"run_at": "document_end",
			"all_frames": false
		}
	],
	"omnibox": {
		"keyword": "OMNIBOX-KEYWORD"
	},
	"browser_action": {
		"default_icon": {
			"19": "assets/icons/icon-19.png",
			"38": "assets/icons/icon-38.png"
		},
		"default_title": "chromeExt_daoCasinoBankroller",
		"default_popup": "index.html"
	},
	"web_accessible_resources": [
		"assets/icons/icon-48.png"
	]
}
